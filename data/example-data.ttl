@prefix cls: <http://clscor.io/ontology/> .
@prefix gd: <http://golemlab.eu/data/> .
@prefix go: <http://golemlab.eu/ontology/> .
@prefix crm: <http://www.cidoc-crm.org/cidoc-crm/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix nif: <http://persistence.uni-leipzig.org/nlp2rdf/ontologies/nif-core#> .

# other useful: nif:sentimentValue , nif:topic

# Define the Units for the Measurement in the Golem (Ontology)

# unit story
go:unit_document a crm:E85_Measurement_Unit ;
    rdfs:label "Document" .

# unit chapter
go:unit_chapter a crm:E85_Measurement_Unit ;
    rdfs:label "Chapter" .

# unit paragraph
nif:Paragraph a crm:E85_Measurement_Unit ;
    rdfs:label "Paragraph" .

# unit word
nif:Word a crm:E85_Measurement_Unit ;
    rdfs:label "Word" .

# unit character (actor-like entity). This is temporary, until we define a class for it
go:unit_character a crm:E85_Measurement_Unit ;
    rdfs:label "Character" .

# unit comment
go:unit_comment a crm:E85_Measurement_Unit ;
    rdfs:label "Comment" .

# A single corpus: Harry Potter Corpus (canon + fanfiction)
gd:potter_corpus a cls:X1_Corpus ;
    rdfs:label "Harry Potter Corpus" ;
    # crm:P148_has_component gd:potter_story_1 , gd:potter_story_2 ;
    crm:P43_has_dimension <http://golemlab.eu/data/potter_corpus/measurement/number_of_documents> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_chapters> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_paragraphs> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_words-text> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_characters> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_male_characters> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_female_characters> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_nonbinary_characters> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_comments> , 
    <http://golemlab.eu/data/potter_corpus/measurement/number_of_words-comments> ;
    crm:P1_is_identified_by <http://golemlab.eu/data/potter_corpus/corpus_name> ,
    <http://golemlab.eu/data/potter_corpus/corpus_acronym>;
    crm:P2_has_type <http://golemlab.eu/data/potter_corpus/corpus_description> .

# Corpus name
<http://golemlab.eu/data/potter_corpus/corpus_name> a crm:E42_Identifier ;
    rdfs:label "Corpus name of the Harry Potter Corpus" ;
    crm:P1i_identifies gd:potter_corpus ;
    crm:P2_has_type <http://golemlab.eu/data/entity/type/corpus_name> ;
    rdf:value "potter_corpus" .

# Corpus acronym
<http://golemlab.eu/data/potter_corpus/corpus_acronym> a crm:E41_Appellation ;
    rdfs:label "Acronym of the Harry Potter Corpus" ;
    crm:P1i_identifies gd:potter_corpus ;
    crm:P2_has_type <http://golemlab.eu/data/entity/type/corpus_acronym> ;
    rdf:value "Potter" .

# Corpus description
<http://golemlab.eu/data/potter_corpus/corpus_description> a crm:E55_Type ;
    rdfs:label "Description of the Harry Potter Corpus" ;
    crm:P2_has_type <http://golemlab.eu/data/entity/type/genre> .

# Measurement: Number of stories in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_documents> a crm:E54_Dimension ;
    rdfs:label "Number of Stories in the Harry Potter corpus" ;
    crm:P90_has_value "200000"^^xsd:int ;
    crm:P91_has_unit go:unit_document .

# Measurement: Number of chapters in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_chapters> a crm:E54_Dimension ;
    rdfs:label "Number of Chapters in the Harry Potter corpus" ;
    crm:P90_has_value "700000"^^xsd:int ;
    crm:P91_has_unit go:unit_chapter .

# Measurement: Number of paragraphs in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_paragraphs> a crm:E54_Dimension ;
    rdfs:label "Number of Paragraphs in the Harry Potter corpus" ;
    crm:P90_has_value "9000000"^^xsd:int ;
    crm:P91_has_unit nif:Paragraph .

# Measurement: Number of words in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_words-text> a crm:E54_Dimension ;
    rdfs:label "Number of Words in the Harry Potter corpus" ;
    crm:P90_has_value "2000000000"^^xsd:int ;
    crm:P91_has_unit nif:Word .

# Measurement: Number of characters in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_characters> a crm:E54_Dimension ;
    rdfs:label "Number of distinct Characters in the Harry Potter corpus" ;
    crm:P90_has_value "20"^^xsd:int ;
    crm:P91_has_unit go:unit_character .

# Measurement: Number of male characters in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_male_characters> a crm:E54_Dimension ;
    rdfs:label "Number of distinct Male Characters in the Harry Potter corpus" ;
    crm:P90_has_value "10"^^xsd:int ;
    crm:P91_has_unit go:unit_character .

# Measurement: Number of female characters in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_female_characters> a crm:E54_Dimension ;
    rdfs:label "Number of distinct Female Characters in the Harry Potter corpus" ;
    crm:P90_has_value "8"^^xsd:int ;
    crm:P91_has_unit go:unit_character .

# Measurement: Number of non-binary characters in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_nonbinary_characters> a crm:E54_Dimension ;
    rdfs:label "Number of distinct Non-binary Characters in the Harry Potter corpus" ;
    crm:P90_has_value "2"^^xsd:int ;
    crm:P91_has_unit go:unit_character .

# Measurement: Number of comments in the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_comments> a crm:E54_Dimension ;
    rdfs:label "Number of Comments in the Harry Potter corpus" ;
    crm:P90_has_value "123"^^xsd:int ;
    crm:P91_has_unit go:unit_comment .

# Measurement: Number of words in comments on the Harry Potter Corpus
<http://golemlab.eu/data/potter_corpus/measurement/number_of_words-comments> a crm:E54_Dimension ;
    rdfs:label "Number of Words in comments on the Harry Potter corpus" ;
    crm:P90_has_value "123000"^^xsd:int ;
    crm:P91_has_unit go:unit_comment .
